{% extends 'layout.html.twig' %}

{% block title %}Sélection de profils{% endblock %}

{% block content %}
<div class= "cadre">
    <video autoplay muted loop id="myVideo">
        <source src="../assets/video/fondhome.mp4" type="video/mp4">
    </video>
   
   <div class="profileList">
    <h1 class="titre">Liste des profils sélectionnés</h1>
    {% for profile in list %}
        <div class="select-profile">
            <div class="{{ profile.choix }}">
                <p>
                {% if profile.choix == 'accept' %}
                    Match !
                {% elseif profile.choix == 'refuse' %}
                    Refusé...
                {% else %}
                    Non vu
                {% endif %}
                 </p>
            </div>
            <div class="select-pseudo">{{ profile.pseudo }}</div>
            <img class="avatarList" src="/../assets/images/avatars/avatar{{ profile.id }}.png">
            <div class="select-date">sélectionné le {{ profile.dateSelection }}</div>
            <a class="sup" href="/soughtProfile/deleteSelectProfile/{{ profile.id }}">Supprimer</a>
        </div>
     
    {% endfor %}
</div>
 
{% endblock %}

